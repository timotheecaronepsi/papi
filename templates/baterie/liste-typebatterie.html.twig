{% extends 'base.html.twig' %}
{% block title %}
	{{parent()}}Liste des types de batteries
{% endblock %}
{% block body %}
	<div class="container-fluid">
		<h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">
			Liste des types de batteries</h1>
		<div class="row justify-content-center">
			<div class="col-12 col-md-8 bg-white p-4 m-0 text-primary">
				<div class="table-responsive">
					<table class="table table-hover">
						<thead>
							<tr class="fw-bold text-primary">
								<th scope="col">Référence</th>
								<th scope="col">Capacité</th>
								<th scope="col">Pays</th>
								<th scope="col"></th>
								<th scope="col"></th>
							</tr>
						</thead>
						<tbody>
							{% for typebatterie in typebatterie | sort((a, b) =>a.id <=> b.id) %}
								<tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
									<td>{{ typebatterie.reference | capitalize }}</td>
									<td>{{ typebatterie.capacite | capitalize }}</td>
									<td>{{ typebatterie.pays | capitalize }}</td>
									<td>
										<a href="{{path("app_modifier_typebatterie",{'id':typebatterie.id})}}">
											<i class="bi bi-pen-fill text-dark"></i>
										</a>
									</td>
									<td>
										<a href="{{path("app_supprimer_typebatterie",{'id':typebatterie.id})}}">
											<i class="bi bi-trash-fill textdark"></i>
										</a>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
